{
  "extends": "@react-native/typescript-config/tsconfig.json",
  "compilerOptions": {
    "allowJs": false,
    "checkJs": false,
    "strict": true,
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": [
    "babel.config.js",
    "index.js",
    "jest.config.js",
    "metro.config.js",
    "node_modules",
    ".prettierrc.js",
    ".eslintrc.js"
  ]
}